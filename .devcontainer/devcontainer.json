{
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
        "ms-toolsai.jupyter",
        "ms-vscode.jupyter",
        "ms-vscode.live-server",
        "RDebugger.r-debugger",
        "redhat.vscode-yaml",
        "REditorSupport.r"
      ]
    }
  },
  "containerEnv": {
    "SHELL": "/bin/bash"
  },
  "remoteUser": "jovyan",
  "containerUser": "jovyan",
  "mounts": [
    {
      "source": "${localEnv:HOME}/.gitconfig",
      "target": "/home/jovyan/.gitconfig",
      "type": "bind"
    },
    {
      "source": "${localEnv:HOME}/.ssh",
      "target": "/home/jovyan/.ssh",
      "type": "bind"
    }
  ],
  "postCreateCommand": "R --silent --no-echo --no-save --no-restore -e \"install.packages(c('languageserver', 'IRkernel'), repos='https://cran.r-project.org/'); IRkernel::installspec(name='ir', displayname='R')\""
}